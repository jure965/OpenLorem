{
  "manifest_version": 2,
  "name": "OpenLorem",
  "version": "0.5",
  "description": "API client for Lorem Ipsum filler text as WebExtension.",
  "author": "Jure Vengu≈°t",
  "homepage_url": "https://github.com/jure965/OpenLorem",
  "icons": {
    "16": "icons/ol-16.png",
    "32": "icons/ol-32.png",
    "48": "icons/ol-48.png",
    "96": "icons/ol-96.png",
    "128": "icons/ol-128.png"
  },
  "browser_action": {
    "default_icon": "icons/ol-32.png",
    "default_title": "OpenLorem",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://baconipsum.com/api/*",
    "http://loripsum.net/api/*",
    "http://dinoipsum.herokuapp.com/api/*",
    "webRequest",
    "contextMenus",
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/content.js"
      ],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "settings.html"
  }
}
